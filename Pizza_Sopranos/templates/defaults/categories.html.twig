<div class="container catrgories-con">
	<h1 class="title">
		Categoreen
	</h1>

	<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 card-con">

		{% for categorie in categories %}


			<div class="col">
				<div class="card">

					<img class="card-img img-fluid" src="{{ asset(categorie.image)}}" class="card-img-top" alt="...">

					<div class="card-body">
						<h5 class="card-title">{{categorie.name}}
							pizza</h5>
						<p class="card-text">{{categorie.description}}</p>


						<a href="{{ path('catrgorie', {id : categorie.id }) }}">

							<button type="button" class="btn ">Naar Pizza:
								{{categorie.name}}
							</button>

						</a>

					</div>
				</div>
			</div>


		{% endfor %}


	</div>
</div></div>
